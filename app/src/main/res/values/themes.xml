<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Register" parent="Theme.Design.Light">
        <item name="android:statusBarColor">#FE9B00</item>

    </style>
    <style name="Theme.Register" parent="Base.Theme.Register" />
<!--up here we create customise piece of theme for Navigation(bottom bar)
by override the primary theme by take part of it-->
    <style name="Theme.Custom" parent="Base.Theme.Register">
        <item name="toolbarStyle">@style/Theme.Custom.Toolbar</item>
        <item name="android:textColor">#E91E63</item>


    </style>


    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/atcgreen</item>

    </style>
    <!--up here we SET customise piece of theme for toolbar
    by override the primary theme by take part of it-->
    <style name="Theme.Custom.Toolbar" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
       </style>






</resources>